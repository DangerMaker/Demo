<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <include layout="@layout/market_view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.compass.market.view.MarketBroadView
            android:id="@+id/market_broad1"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/common_divide_line" />

        <com.compass.market.view.MarketBroadView
            android:id="@+id/market_broad2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/common_divide_line" />

        <com.compass.market.view.MarketBroadView
            android:id="@+id/market_broad3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>